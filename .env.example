# News Service Environment Variables
# ==================================
# Copia este archivo como .env y configura tus valores

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Telegram Bot Configuration  
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# News API Configuration
NEWS_API_KEY=your-news-api-key-here

# GNews API Configuration (Optional fallback)
GNEWS_KEY=your-gnews-api-key-here

# Tavily Search Configuration (Nuevo)
TAVILY_API_KEY=your-tavily-api-key-here

# Dashboard Configuration (Nuevo)
FLASK_SECRET_KEY=news-service-dashboard-2024
DASHBOARD_PORT=5000
FLASK_DEBUG=false

# Database Configuration
DATABASE_PATH=./data/news_service.db

# Scheduler Configuration
SCHEDULER_ENABLED=true
DAILY_NEWS_TIME=08:00
DAILY_NEWS_TIMEZONE=Europe/Madrid

# Logging Configuration
LOG_LEVEL=INFO

# LangSmith Configuration (Observabilidad)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=news-service